extends baseEmail

block content
  p Hello #{firstName},
  p Your purchase is complete !
  p HERE IS A SUMMARY OF YOUR PURCHASE :
  table.products(role='presentation' border='0' cellpadding='0' cellspacing='0')
    thead
      tr
        th Product
        th Quantity
        th Price
    tbody
      each product in products
        tr
          td= product.productName
          td= product.quantity
          td $#{product.price}
      tr
        td
        td
        td Total: $#{totalPrice}
